<%- include('../partials/header.ejs') %>

<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <!-- Texto -->
            <div class="col-md-6">
                <p class="hero-subtitle text-uppercase fw-medium p-2">
                    It's a good time for the great taste of burgers
                </p>
                <h1 class="display-1 fw-bolder text-dark text-uppercase">
                    Burger <span class="text-danger">Week</span>
                </h1>
            </div>

            <!-- Imagen -->
            <div class="col-md-6 text-center">
                <img src="/img/burger.png" alt="Burger Combo" class="img-fluid" style="max-height: 500px;" />
            </div>
        </div>
    </div>
</section>

<!-- Sección de restaurantes -->
<div class="text-center mt-5">
    <p class="text-uppercase text-warning rounded p-2 px-3 fw-semibold d-inline">Los mejores</p>
    <h2 class="display-5 fw-bold text-dark mb-3 mt-3">Restaurantes</h2>
</div>
<%- include('./restaurantes/list.ejs', {restaurantes, mostrarControles: false}) %>

<!-- Sección de hamburguesas -->
<section class="py-5">
    <div class="container text-center ">
        <p class="text-uppercase text-warning rounded p-2 px-3 fw-semibold d-inline">Una obra de arte llamada</p>
        <h2 class="fw-bold mb-3 display-5">Hamburguesa</h2>

        <div class="row justify-content-center">
            <% hamburguesas.forEach(h => { %>
                <div class="col-sm-6 col-md-4 mb-4">
                    <div class="card h-100 shadow-sm text-center">
                        <a href="/hamburguesas/<%= h.id %>" class="text-decoration-none text-dark">
                            <img src="/uploads/<%= h.imagen %>" class="card-img-top" style="height: 220px; object-fit: cover;" alt="<%= h.nombre %>"/>
                            <div class="card-body">
                                <h5 class="card-title fw-bold text-uppercase"><%= h.nombre %></h5>
                            </div>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>

<%- include('../partials/footer.ejs') %>
